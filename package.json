{
  "name": "vivant-voip",
  "version": "1.0.0",
  "description": "This is a VoIP application for Vivant Corporation. It is used to make calls to other users using the Vivant VoIP application.",
  "homepage": "https://vivantcorp.com",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder --win",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "vivantcorp.vivant-softphone",
    "protocols": {
      "name": "MyApp Protocol Handler",
      "schemes": ["tel", "callto"]
    },
    "files": [
      "main.js",
      "register-protocol.reg",
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "*.html"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "include": "installer.nsh"
    }
  },
  "keywords": [],
  "author": {
    "name": "Muhammad Imran Israr",
    "email": "mimranisrar6@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^9.0.0",
    "regedit": "^5.1.3"
  }
}
